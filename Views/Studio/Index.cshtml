@model IEnumerable<MediiProgramareEntity.Models.StudioModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeBoxOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorldBoxOffice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeBoxOffice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorldBoxOffice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
